print("Qual vai ser a sua forma de pagamento?")
print("1 - DINHEIRO")
print("2 - CARTÃO DE CRÉDITO/DÉBITO")
print("3 - PIX")

pgto = int(input("Digite o número da opção: "))

if pgto == 1:
  troco = input("Troco para quanto? Exemplo troco para 20: ")
  print(troco) 
  print("DINHEIRO")

elif pgto == 2:
  print("1 - VISA")
  print("2 - MASTERCARD")
  print("3 - AMERICAN EXPRESS")
  print("4 - ELO")
  print("5 - HIPERCARD")
  card = int(input("Digite o número correspondente ao cartão: "))
  if card == 1:
    print("VISA")
  elif card == 2:
    print("MASTERCARD")
  elif card == 3:
    print("AMERICAN EXPRESS")
  elif card == 4:
    print("ELO")
  elif card == 5:
    print("HIPERCARD")
  else:
    print("Opção Inválida")

elif pgto == 3:
  print("PIX")
  print("Por gentileza, fazer o envio ao PIX 99999998")

else:
  print("Opção Inválida")

